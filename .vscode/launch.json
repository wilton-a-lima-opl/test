  "version": "0.2.0",
  "configurations": [
      {
          "type": "chrome",
          "request": "launch",
          "name": "Lightning Dev Chrome",
          "webRoot": "${workspaceFolder}/build",
          "url": "http://localhost:5501",
          "preLaunchTask": "build",
          "runtimeArgs": ["--disable-web-security"]
