      {
        "type": "msedge",
        "request": "launch",
        "name": "Lightning Dev Edge",
        "webRoot": "${workspaceFolder}/build",
        "url": "http://localhost:5501",
        "preLaunchTask": "build",
        "runtimeArgs": ["--disable-web-security"]
    }
  ]
}
